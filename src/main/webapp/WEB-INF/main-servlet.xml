<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="com.vasylyev.controllers"/>

    <bean id="clientDao" class="com.vasylyev.dao.impl.ClientDBDao"/>
    <bean id="productDao" class="com.vasylyev.dao.impl.ProductDBDao"/>
    <bean id="orderDao" class="com.vasylyev.dao.impl.OrderDBDao"/>

    <bean id="validationService" class="com.vasylyev.validators.impl.ValidationServiceImpl"/>

    <bean id="clientService" class="com.vasylyev.services.impl.ClientServiceImpl" autowire="constructor"/>
    <bean id="productService" class="com.vasylyev.services.impl.ProductServiceImpl" autowire="constructor"/>
    <bean id="orderService" class="com.vasylyev.services.impl.OrderServiceImpl" autowire="constructor"/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

</beans>